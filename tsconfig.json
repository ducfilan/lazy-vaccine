{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "lib": [
            "es2018",
            "dom",
            "ES2021.String"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@img/*": [
                "./src/images/*"
            ],
            "@hooks/*": [
                "./src/common/hooks/*"
            ],
            "@consts/*": [
                "./src/common/consts/*"
            ],
            "@facades/*": [
                "./src/common/facades/*"
            ],
            "@bg/*": [
                "./src/background/*"
            ]
        },
    },
    "include": [
        "src/**/*",
        "src/custom.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}